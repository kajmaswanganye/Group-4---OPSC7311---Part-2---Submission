<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue4"
    android:padding="16dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Set Daily Goals"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/olga"
                    android:gravity="center"/>
            </androidx.appcompat.widget.Toolbar>

            <!-- Minimum Daily Goal -->
            <TextView
                android:id="@+id/textViewMinGoal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Minimum Daily Goal (hours):"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_below="@id/toolBar"
                android:layout_marginTop="16dp"/>

            <EditText
                android:id="@+id/editTextMinGoal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Minimum Goal"
                android:inputType="numberDecimal"
                android:textColor="@color/white"
                android:layout_below="@id/textViewMinGoal"
                android:layout_marginTop="8dp"/>

            <!-- Maximum Daily Goal -->
            <TextView
                android:id="@+id/textViewMaxGoal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Maximum Daily Goal (hours):"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_below="@id/editTextMinGoal"
                android:layout_marginTop="16dp"/>

            <EditText
                android:id="@+id/editTextMaxGoal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Maximum Goal"
                android:inputType="numberDecimal"
                android:layout_below="@id/textViewMaxGoal"
                android:layout_marginTop="8dp"/>

            <!-- Save Button -->
            <Button
                android:id="@+id/buttonSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:layout_below="@id/editTextMaxGoal"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/blue3"
                android:shadowColor="#FFFFFF"
                android:textColor="@color/white"
                android:layout_gravity="center"
                app:cornerRadius="100dp"
                android:textSize="20sp"
                android:fontFamily="@font/olga"/>

            <!-- View Goals Button -->
            <Button
                android:id="@+id/buttonView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/buttonSave"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/blue3"
                android:fontFamily="@font/olga"
                android:shadowColor="#FFFFFF"
                android:text="View Goals"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:cornerRadius="100dp" />

            <FrameLayout
                android:id="@+id/fragment_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/buttonView"
                android:layout_marginTop="16dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvLineChart"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:backgroundTint="@color/white"
                    android:elevation="25dp"
                    app:cardCornerRadius="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/toolbar">

                    <TextView
                        android:id="@+id/tv_line_chart_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|center"
                        android:layout_marginTop="5dp"
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        tools:text="Daily Goals"/>

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/lineChart"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginEnd="10dp"
                        android:background="@color/grey6"/>
                </androidx.cardview.widget.CardView>
            </FrameLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
