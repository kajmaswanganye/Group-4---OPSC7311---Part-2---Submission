<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/blue4">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Schedule a task"
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="@font/olga"
                android:gravity="center"/>

        </androidx.appcompat.widget.Toolbar>

    <!-- Date Field -->
    <TextView
        android:id="@+id/textViewDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_below="@id/toolBar"
        android:layout_marginBottom="8dp"/>

    <DatePicker
        android:id="@+id/datePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewDate"/>

    <!-- Start Time Field -->
    <TextView
        android:id="@+id/textViewStartTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Time"
        android:textSize="18sp"
        android:layout_below="@id/datePicker"
        android:layout_marginTop="16dp"
        android:textColor="@color/white"
        android:layout_marginBottom="8dp"/>

    <TimePicker
        android:id="@+id/timePickerStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewStartTime"/>

    <!-- End Time Field -->
    <TextView
        android:id="@+id/textViewEndTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End Time"
        android:textSize="18sp"
        android:layout_below="@id/timePickerStart"
        android:layout_marginTop="16dp"
        android:textColor="@color/white"
        android:layout_marginBottom="8dp"/>

    <TimePicker
        android:id="@+id/timePickerEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewEndTime"/>

    <!-- Description Field -->
    <TextView
        android:id="@+id/textViewDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="18sp"
        android:layout_below="@id/timePickerEnd"
        android:layout_marginTop="16dp"
        android:textColor="@color/white"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/editTextDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Description"
        android:textColor="@color/white"
        android:layout_below="@id/textViewDescription"/>

    <!-- Category Field -->
    <TextView
        android:id="@+id/textViewCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category"
        android:textSize="18sp"
        android:layout_below="@id/editTextDescription"
        android:layout_marginTop="16dp"
        android:textColor="@color/white"
        android:layout_marginBottom="8dp"/>

    <Spinner
        android:id="@+id/spinnerCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewCategory"/>

    <Button
        android:id="@+id/buttonSchedule"
        android:layout_width="157dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:backgroundTint="@color/white"
        android:text="Schedule"
        android:textColor="#000000"
        android:textSize="24sp"
        android:layout_below="@id/spinnerCategory"
        android:layout_marginTop="10dp"
        android:gravity="center"/>

        <TextView
            android:id="@+id/or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Or"
            android:textSize="28sp"
            android:layout_below="@id/buttonSchedule"
            android:layout_marginTop="16dp"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/buttonStartNow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:backgroundTint="@color/white"
            android:text="Start Now"
            android:textColor="#000000"
            android:textSize="24sp"
            android:layout_below="@id/or"
            android:layout_marginTop="10dp"
            android:gravity="center"/>

    </RelativeLayout>


</ScrollView>
